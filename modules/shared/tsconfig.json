{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["WebWorker", "DOM", "ESNext"],
		"types": ["vite/client", "@total-typescript/ts-reset"], // Both service and client use the vite/client

		"module": "ESNext",
		"target": "ESNext",

		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"noEmit": true,

		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": ["."]
}
