{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",

		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"outDir": "dist",

		"esModuleInterop": true,

		"skipLibCheck": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true,
		"exactOptionalPropertyTypes": true,
		"checkJs": true
	},
	"include": ["src"]
}
