{
	"type": "module",
	"name": "eternis",
	"scripts": {
		"dev": "vite --port 3000",
		"build": "vite build",
		"preview": "vite preview --port 3000",
		"contracts:compile": "tsx ./src/utils/contracts/generate.ts",
		"graph:codegen": "npm run codegen --prefix ./graph",
		"graph:build": "npm run build --prefix ./graph",
		"graph:deploy": "npm run deploy --prefix ./graph",
		"postinstall": "yarn --cwd ./graph && typify-contracts --src ./src/contracts && npm run graph:codegen"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.4.2",
		"ethers": "^6.3.0",
		"master-ts": "github:DeepDoge/master-ts",
		"master-ts-vite-plugin": "github:DeepDoge/master-ts-vite-plugin",
		"typescript": "^4.6.4",
		"typify-contracts": "github:DeepDoge/typify-contracts",
		"urql": "^4.0.0",
		"vite": "^3.2.3",
		"vite-plugin-singlefile": "^0.13.5"
	}
}
