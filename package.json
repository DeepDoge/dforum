{
	"type": "module",
	"name": "eternis",
	"scripts": {
		"dev": "vite --port 3000",
		"build": "vite build",
		"preview": "vite preview --port 3000",
		"format": "prettier -w ./",
		"contracts:compile": "tsx ./src/utils/contracts/generate.ts",
		"graph:codegen": "npm run codegen --prefix ./graph",
		"graph:build": "npm run build --prefix ./graph",
		"graph:deploy": "npm run deploy --prefix ./graph",
		"postinstall": "yarn --cwd ./graph && typify-contracts --src ./src/contracts && npm run graph:codegen && npm run format"
	},
	"devDependencies": {
		"@metamask/jazzicon": "^2.0.0",
		"@total-typescript/ts-reset": "latest",
		"ethers": "latest",
		"master-ts": "github:DeepDoge/master-ts",
		"master-ts-vite-plugin": "github:DeepDoge/master-ts-vite-plugin",
		"prettier": "latest",
		"prettier-plugin-organize-imports": "latest",
		"typescript": "latest",
		"typify-contracts": "github:DeepDoge/typify-contracts",
		"urql": "latest",
		"vite": "latest",
		"vite-plugin-singlefile": "latest"
	}
}
