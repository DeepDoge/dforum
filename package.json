{
	"type": "module",
	"name": "eternis",
	"scripts": {
		"dev": "vite --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"format": "prettier -w ./",
		"test": "run-p test:*",
		"test-watch": "run-p --race test-watch:*",
		"test:types": "tsc --noEmit",
		"test-watch:types": "tsc --watch --noEmit",
		"test:node": "tsx --test src/**/*.test.ts",
		"test-watch:node": "tsx --test --watch src/**/*.test.ts",
		"contracts:compile": "typify-contracts --src ./src/contracts",
		"graph:codegen": "npm run codegen --prefix ./graph",
		"graph:build": "npm run build --prefix ./graph",
		"graph:deploy": "npm run deploy --prefix ./graph",
		"postinstall": "yarn --cwd ./graph && npm run contracts:compile && npm run graph:codegen && npm run format"
	},
	"devDependencies": {
		"@metamask/jazzicon": "^2.0.0",
		"@total-typescript/ts-reset": "^0.4.2",
		"@types/node": "^20.1.2",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"ethers": "^6.3.0",
		"hotscript": "^1.0.11",
		"master-ts": "github:DeepDoge/master-ts#0.0.68",
		"master-ts-vite-plugin": "github:DeepDoge/master-ts-vite-plugin#0.0.17",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"typify-contracts": "github:DeepDoge/typify-contracts#0.0.9",
		"urql": "^4.0.2",
		"vite": "^4.3.5",
		"vite-plugin-singlefile": "^0.13.5"
	}
}
